<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edo.studiebarometer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InvoerScherm"
            android:label="@string/title_activity_invoer_scherm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Persoonsscherm"
            android:label="@string/title_activity_persoonsscherm"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DetailsScherm"
            android:label="@string/title_activity_details_scherm"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.edo.studiebarometer.MainActivity" />
        </activity>
    </application>

</manifest>
